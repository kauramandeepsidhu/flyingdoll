<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="260dp"
    android:background="@color/color5"
    android:padding="0dip" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/color8"
        android:focusable="false"
        android:gravity="center"
        android:shadowColor="@android:color/transparent"
        android:text="PAUSED"
        android:textColor="#FFFFFF"
       
        android:textSize="35dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bresume"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/tick"
        android:onClick="onresumebuttonclick"
        android:text="RESUME"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <Button
        android:id="@+id/brestart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bresume"
        android:layout_below="@+id/bresume"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/restart"
        android:text="RESTART"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <Button
        android:id="@+id/bexit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/brestart"
        android:layout_below="@+id/brestart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/cross"
        android:text="EXIT"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

</RelativeLayout>